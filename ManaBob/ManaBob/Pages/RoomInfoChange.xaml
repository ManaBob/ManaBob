<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ManaBob.Pages.RoomInfoChange">
  
  <!--Main Grid-->
  <Grid >
    <Grid.RowDefinitions>
      <RowDefinition Height="50"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="100"/>
    </Grid.RowDefinitions>

    <!--Top Panel-->
    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="50"/>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="50"/>
      </Grid.ColumnDefinitions>

      <!--Room Name-->
      <Image    x:Name="ChangeMainTitle"
                Source="Images/mainTitle.png"
                Grid.Column="1"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                />
    </Grid>
    <Grid Grid.Row="1">
      <Grid.RowDefinitions>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="35"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
      </Grid.RowDefinitions>

      <!--*필수항목-->
      <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="10"/>
          <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image    Source="Images/CreateRoom_red.png"
                  WidthRequest="120"
                  Grid.Column="1"
                  Margin="25,0"/>
      </Grid>

      <!--*방 제목 입력-->
      <Grid Grid.Row="2">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="10"/>
          <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image    Source="Images/CreateRoom_title.png"
                  WidthRequest="120"
                  Grid.Column="1"
                  Margin="25,0"/>
      </Grid>
      <!--*카테고리선택-->
      <Grid Grid.Row="3">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="30"/>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Entry  x:Name="ChangeRoomTitleTextBox"
                Text="TextBox"
                Grid.Column="1"
                Margin="40,0"/>
      </Grid>
      <Grid Grid.Row="4">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="10"/>
          <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image    Source="Images/CreateRoom_cata.png"
                  WidthRequest="120"
                  Grid.Column="1"
                  Margin="25,0"/>
      </Grid>
      <Grid Grid.Row="5">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="30"/>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Picker     x:Name="ChangeCategory"
                    Grid.Column="1"
                    Margin="40,0"/>
      </Grid>

      <!--*인원선택-->
      <Grid Grid.Row="6">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="10"/>
          <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image    Source="Images/CreateRoom_number.png"
                  WidthRequest="120"
                  Grid.Column="1"
                  Margin="25,0"/>
      </Grid>
      <Grid Grid.Row="7">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="30"/>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Picker     x:Name="ChangePerson"
                    Grid.Column="1"
                    Margin="40,0"/>
      </Grid>
      <!--*시간선택-->
      <Grid Grid.Row="8">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="10"/>
          <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image    Source="Images/CreateRoom_time.png"
                  WidthRequest="120"
                  Grid.Column="1"
                  Margin="25,0"/>
      </Grid>
      <Grid Grid.Row="9">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="30"/>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <TimePicker   x:Name="ChangeTimePick"
                      Grid.Column="1"
                      Margin="40,0"
                      />
      </Grid>
      <!--예상비용-->
      <Grid Grid.Row="10">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="10"/>
          <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image    Source="Images/CreateRoom_ex.png"
                  WidthRequest="120"
                  Grid.Column="1"
                  Margin="25,0"
                  />
      </Grid>
      <Grid Grid.Row="11">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="30"/>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Entry     x:Name="ChangeMeetTime"
                   HeightRequest="30"
                   Text="TextBox"
                   Grid.Column="1"
                   Margin="40,0"
                   />
      </Grid>


    </Grid>
    <!--버튼-->
    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="1*"/>
      </Grid.ColumnDefinitions>
      <!--취소-->
      <Image  Source="Images/error.png"
              Grid.Column="0"
              HeightRequest="60"
              WidthRequest="60"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              />
      
      <Button     x:Name="ChangeCancel"
                  HeightRequest="60" WidthRequest="60"
                  Grid.Column="0"
                  Clicked="CancleButtonClicked"
                  />

      <!--만들기-->

      <Image    Source="Images/success.png"
                HeightRequest="60"
                WidthRequest="60"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Grid.Column="1"
                />
      <Button     x:Name="ChangeInfoClicked"
                  Grid.Column="1"
                  HeightRequest="60" WidthRequest="60"
                  Clicked="OnChangeInfoClicked"
                  />
    </Grid>
  </Grid>

</ContentPage>