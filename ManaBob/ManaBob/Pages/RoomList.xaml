<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ManaBob.Pages.RoomList">  
  
  <!--Main Grid-->
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="50"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="33"/>
      <RowDefinition Height="1*"/>
    </Grid.RowDefinitions>

    <!-- 0. Top Panel -->
    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="50"/>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="50"/>
      </Grid.ColumnDefinitions>

      <!--Room Name-->

      <Label    Grid.Column="1" 
                Text="만 나 밥" 
                VerticalOptions="Center"
                HorizontalOptions="Center"
                FontSize="30"/>

      <!--Dummy Button for check-->

        <Image    Source="Images/createRoom.png" 
                  Grid.Column="2"/>

      <Button   x:Name="createRoomButton"
                Grid.Column="2"
                WidthRequest="50"
                HeightRequest="50"/>
    </Grid>



    <!-- 1. Room Search -->
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="80"/>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="10"/>
      </Grid.ColumnDefinitions>
        <!--<Label    Text="방제목"
                  Grid.Column="0"
                  VerticalOptions="Center"
                  HorizontalOptions="Center"
                  FontSize="15"/>-->
       <Image     Source="Images/RoomList_tilte.png"
                  Grid.Column="0"
                  VerticalOptions="Center"
                  HorizontalOptions="Center"
                  />
        <SearchBar    x:Name="searchBar"
                      Grid.Column="1"
                      />
    </Grid>
    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
          <ColumnDefinition Width="80"/>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="80"/>
              <ColumnDefinition Width="10"/>
      </Grid.ColumnDefinitions>
     <Label    Text="메뉴선택"
               Grid.Column="1"
                  VerticalOptions="Center"
                  HorizontalOptions="Center"
                  FontSize="15"/>
     <Label    Text="시간선택"
               Grid.Column="2"
                  VerticalOptions="Center"
                  HorizontalOptions="Center"
                  FontSize="15"/>
     <Label    Text="인원선택"
               Grid.Column="3"
                  VerticalOptions="Center"
                  HorizontalOptions="Center"
                  FontSize="15"/>
     </Grid>
        
    <!-- 2. Filter  -->
    <Grid Grid.Row="3">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="10"/>
          <ColumnDefinition Width="80"/>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="80"/>
              <ColumnDefinition Width="10"/>
      </Grid.ColumnDefinitions>

      <Picker     x:Name="menuPick"
                  Grid.Column="1"
                  WidthRequest="80"
                  HorizontalOptions="CenterAndExpand"
                  />
      <TimePicker x:Name="timePick"
                  Grid.Column="2"    
                                    HorizontalOptions="CenterAndExpand"

                  />
      <Picker     x:Nmae="sizePick"
                  Grid.Column="3  "
                  WidthRequest="80"
                                    HorizontalOptions="CenterAndExpand"

                  />
    </Grid>
  
    <!-- 3. Room List -->
    <Grid Grid.Row="4" >
      <ScrollView>
        <ListView x:Name="roomListView">
          <StackLayout Orientation="Vertical" >
                        <StackLayout Orientation="Horizontal" >
                            <Label      x:Name="roomNumberTextBlock"
                                            Text="001"
                                            HeightRequest="20"
                                            Margin="10,0"/>
                            <Label      x:Name="roomMenuTextBlock"
                                            Text="학식"
                                            HeightRequest="20"
                                            Margin="5,0"/>
                            <Label      x:Name="roomTextTimeTextBlock"
                                            Text="13:00"
                                            HeightRequest="20"
                                            Margin="5,0"/>
                            <Label      x:Name="roomJoinNumberTextBlock"
                                            Text="4명"
                                            HeightRequest="20"
                                            Margin="5,0"/>
                            <Image          x:Name="roomStatusImage"
                                            HeightRequest="10" WidthRequest="10"

                                            Source="Images/redLight.png"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label      x:Name="roomTitleTextBlock"
                                            Text="방 제목이 들어올 자리"
                                            Margin="10,0"
                                            HeightRequest="30" 
                                            FontSize="20"/>
                        </StackLayout>
                       
                    </StackLayout>
        </ListView>
      </ScrollView>
    </Grid>
  </Grid>
  
</ContentPage>